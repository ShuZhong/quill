{
  "compilerOptions": {
    "declaration": false,
    "module": "ES2015",
    "sourceMap": true,
    "target": "ES2015",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },

  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
